<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	
	<bean id="configLoader"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:jdbc.properties</value>
				<value>classpath:redis.properties</value>
				<value>classpath:domain.properties</value>
			</list>
		</property>
	</bean>

    <bean id="domainConfig" class="com.dome.sdkserver.util.PropertiesUtil" init-method="init" >
        <property name="filePath" value="/domain.properties"/>
    </bean>
	
  	<import resource="datasource-config.xml" />
	<import resource="quartz-config.xml" />
	<import resource="redis-config.xml" />

	<context:component-scan base-package="com.dome.sdkserver" />
	 
</beans>
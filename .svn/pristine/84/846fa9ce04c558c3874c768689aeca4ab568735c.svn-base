<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			classpath:spring/app-config.xml
		</param-value>
  </context-param>
  <listener>
    <listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
  </listener>
  <filter>
    <filter-name>SetCharacterEncoding</filter-name>
    <filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
		</filter-class>
    <async-supported>true</async-supported>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SetCharacterEncoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>access</filter-name>
    <filter-class>
		com.dome.sdkserver.common.filter.AccessAllowOriginFilter
	</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>access</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>mvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
				classpath:spring/mvc-config.xml
	  </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
    <async-supported>true</async-supported>
  </servlet>
  <servlet-mapping>
    <servlet-name>mvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <jsp-config>
    <taglib>
      <taglib-uri>http://sop.qbao.com/global/tag</taglib-uri>
      <taglib-location>/WEB-INF/tld/qb-global-tag.tld</taglib-location>
    </taglib>
  </jsp-config>
  <error-page>
    <error-code>404</error-code>
    <location>/404.htm</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/404.htm</location>
  </error-page>
  <error-page>
    <error-code>401</error-code>
    <location>/500.htm</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/500.htm</location>
  </error-page>
  <welcome-file-list>
    <welcome-file>/app/index</welcome-file>
  </welcome-file-list>
 <servlet>
    <description></description>
    <display-name>PicUploadServlet</display-name>
    <servlet-name>PicUploadServlet</servlet-name>
    <servlet-class>com.dome.sdkserver.controller.PicUploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PicUploadServlet</servlet-name>
    <url-pattern>/merchantapp/v1/uploadfile</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>PkgUploadServlet</display-name>
    <servlet-name>PkgUploadServlet</servlet-name>
    <servlet-class>com.dome.sdkserver.controller.PkgUploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PkgUploadServlet</servlet-name>
    <url-pattern>/pkgmanage/upload</url-pattern>
  </servlet-mapping>
  <!-- 计费点权限控制 -->
  <filter>
    <display-name>CpOperFilter</display-name>
    <filter-name>CpOperFilter</filter-name>
    <filter-class>com.dome.sdkserver.filter.CpOperFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CpOperFilter</filter-name>
    <url-pattern>/chargepoint/*</url-pattern>
    <url-pattern>/pkgmanage/*</url-pattern>
  </filter-mapping>
  <!-- 商户需要审批通过才能访问的页面 -->
  <filter>
  	<filter-name>AppManageFilter</filter-name>
  	<filter-class>com.dome.sdkserver.filter.AppManageFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AppManageFilter</filter-name>
    <url-pattern>/merchant/payStatistic.html</url-pattern>
    <url-pattern>/payStatistic/*</url-pattern>
  </filter-mapping>
</web-app>